{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "@bnpl/shared": ["../shared/src"],
      "@bnpl/shared/*": ["../shared/src/*"]
    },
    "types": [
      "react",
      "react-dom",
      "react-admin",
      // dev
      "jest",
      "@testing-library/jest-dom"
    ],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    // dev
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "isolatedModules": true // Important for Jest
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
