{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "react": ["../node_modules/react"],
      "react-dom": ["../node_modules/react-dom"],
      "react-admin": ["../node_modules/react-admin"],
      "jwt-decode": ["../node_modules/jwt-decode"]
    },
    "types": ["react", "react-dom", "react-admin"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    // as a shared package
    "declaration": true
  },
  "include": ["src"],
  "exclude": [
    "**/__tests__/**/*",
    "src/jest.d.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "dist",
    "node_modules"
  ]
}
