{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "@bnpl/shared": ["../shared/src"],
      "@bnpl/shared/*": ["../shared/src/*"]
    },
    "types": ["react", "react-dom", "react-admin"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "../" // to shared be under
  },
  "include": ["src"],
  "exclude": [
    "**/__tests__/**/*",
    "src/jest.d.ts",
    "node_modules"
  ]
}
